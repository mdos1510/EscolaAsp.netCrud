@model SistemaControle.Models.GruposDetalhes
@{
    ViewBag.Title = "Adicionar Aluno";
}

<h2>Adicionar Aluno</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GrupoId)

        <div class="form-group">
            <!-- @Html.LabelFor(model => model.UserId, "UserId", htmlAttributes: new { @class = "control-label col-md-2" })  -->
            @Html.LabelForModel("Estudante", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-info" />
                @Html.ActionLink("Voltar", "Details", new { id = Model.GrupoId }, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

